{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://code-brain.local/schemas/tasks.schema.json",
  "title": "code-brain/to-do/tasks",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "tasks"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "updated_at", "id_format"],
      "properties": {
        "version": { "type": "string", "minLength": 1 },
        "updated_at": { "type": "string", "format": "date-time" },
        "id_format": {
          "type": "string",
          "pattern": "^\\^T-\\\\d\\{4\\}\\$$"
        }
      }
    },
    "tasks": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/$defs/task" }
    }
  },
  "$defs": {
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "id",
        "title",
        "description",
        "status",
        "priority",
        "related_use_case",
        "updated_at",
        "acceptance_criteria",
        "test_plan",
        "rollback_plan",
        "assignees",
        "decisions",
        "insights",
        "depends_on"
      ],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^T-\\d{4}$"
        },
        "title": {
          "type": "string",
          "minLength": 3,
          "maxLength": 140
        },
        "description": {
          "type": "string",
          "minLength": 3,
          "maxLength": 2000
        },
        "status": {
          "type": "string",
          "enum": ["todo", "doing", "review", "blocked", "done"]
        },
        "priority": {
          "type": "string",
          "enum": ["P0", "P1", "P2", "P3"]
        },
        "related_use_case": {
          "type": "string",
          "pattern": "^UC-\\d{4}$"
        },
        "decisions": {
          "type": "array",
          "items": { "type": "string", "pattern": "^ADR-\\d{4}$" },
          "uniqueItems": true
        },
        "insights": {
          "type": "array",
          "items": { "type": "string", "pattern": "^IN-\\d{4}$" },
          "uniqueItems": true
        },
        "depends_on": {
          "type": "array",
          "items": { "type": "string", "pattern": "^T-\\d{4}$" },
          "uniqueItems": true
        },
        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 3 }
        },
        "test_plan": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 3 }
        },
        "rollback_plan": {
          "type": "string",
          "minLength": 3
        },
        "assignees": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 2 },
          "uniqueItems": true
        },
        "updated_at": {
          "type": "string",
          "format": "date-time"
        }
      }
    }
  }
}
